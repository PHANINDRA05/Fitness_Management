<link rel="stylesheet" type="text/css" href="/register123.css" >
<div class="header">
  <div class="nav-menu">
      <div class="logo">Fitness<span style="color:yellow" ><span style="font-size:60px">365</span></span></div>
      <div class="menu">
          <ul>
              <li><a href="/" >Home</a></li>
              <li><a href="/welcome"class="active">Login</a></li>
              <li><a href="/about">About</a></li>
              <li><a href="/contact">Contact us</a></li>
          </ul>
      </div>
  </div>

<div class="registerform">
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-4">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <%- include('./partials/messages') %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
            size="50"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <br>
       <div class="d-flex justify-content-center"> 
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
        </div>
      </form>
      <p class="lead mt-4" style="color:black; margin-left: 12px;">Have An Account? <a href="/users/login">Login</a></p>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>
</div>

